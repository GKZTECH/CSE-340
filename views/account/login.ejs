<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - CSE Motors</title>
</head>
<body>
  <div class="container">
    <h1>Login to CSE Motors</h1>

    <!-- Display error messages (e.g., invalid credentials) -->
    <% if (errors && errors.length > 0) { %>
      <div class="error">
        <% errors.forEach(error => { %>
          <p><%= error %></p>
        <% }); %>
      </div>
    <% } %>

    <!-- Display success messages (e.g., after logout) -->
    <% if (message) { %>
      <div class="message">
        <p><%= message %></p>
      </div>
    <% } %>

    <!-- Login Form -->
    <form action="/account/login" method="POST">
      <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required autofocus>
      </div>

      <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
      </div>

      <button type="submit">Login</button>
    </form>

    <div class="register-link">
      <p>Don't have an account? <a href="/account/register">Register here</a></p>
    </div>
  </div>
</body>
</html>
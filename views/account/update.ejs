<h1>Update Account</h1>

<% if (errors && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(error => { %>
      <li><%= error %></li>
    <% }); %>
  </ul>
<% } %>

<% if (message) { %>
  <p class="message"><%= message %></p>
<% } %>

<!-- Account Update Form -->
<form method="POST" action="/account/update">
  <input type="hidden" name="action" value="update">
  <input type="hidden" name="account_id" value="<%= locals.account_id ? locals.account_id : account.account_id %>">

  <label for="firstname">First Name:</label>
  <input type="text" id="firstname" name="firstname" 
    value="<%= locals.firstname ? locals.firstname : account.firstname %>" required>

  <label for="lastname">Last Name:</label>
  <input type="text" id="lastname" name="lastname" 
    value="<%= locals.lastname ? locals.lastname : account.lastname %>" required>

  <label for="email">Email:</label>
  <input type="email" id="email" name="email" 
    value="<%= locals.email ? locals.email : account.email %>" required>

  <button type="submit">Update Account</button>
</form>

<!-- Change Password Form -->
<form method="POST" action="/account/update">
  <input type="hidden" name="action" value="password">
  <input type="hidden" name="account_id" value="<%= locals.account_id ? locals.account_id : account.account_id %>">

  <p>Passwords must be at least 12 characters and include at least 1 number, 1 capital letter and 1 special character.</p>
  <p><em>Note: Entering a new password will change your current password.</em></p>

  <label for="password">New Password:</label>
  <input type="password" id="password" name="password" 
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
  
  <button type="submit">Change Password</button>
</form>